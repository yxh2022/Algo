class Solution {
    public List<List<Integer>> subsets(int[] nums) {
        LinkedList<List<Integer>> res = new LinkedList<List<Integer>>();
        LinkedList<Integer> tmp = new LinkedList();
        helper(nums, res, tmp, 0);
        return res;
        
    }
    
    public void helper(int[] nums, LinkedList<List<Integer>> res, LinkedList<Integer> tmp, int idx) {
        if(idx== nums.length){
            LinkedList a = new LinkedList(tmp);
            res.add(a);
            return;
        }
        
        helper(nums, res, tmp, idx+1);
        
        tmp.push(nums[idx]);
        helper(nums, res, tmp, idx+1);
        tmp.pop();

    }
}
